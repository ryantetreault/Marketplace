<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cboard.marketplace.marketplace_frontend.RatingPopupController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Rate Your Experience" style="-fx-text-fill: #227cd7;">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <Slider fx:id="ratingSlider" min="0" max="5" value="0" majorTickUnit="1" blockIncrement="1"
            snapToTicks="true" showTickLabels="true" showTickMarks="true" prefWidth="300"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Submit" onAction="#submitRating"
                style="-fx-background-color: #227cd7; -fx-text-fill: white; -fx-background-radius: 8px; -fx-font-size: 14px;"/>
    </HBox>
</VBox>